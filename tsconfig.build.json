{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "declaration": true,
    "allowJs": false,
    "isolatedModules": false,
    "noEmit": false,
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
